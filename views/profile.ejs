<!doctype html>
<html>
<head>
    <title>Telc - Prufungsergebnisse</title>
    <% include head.html %>
    <link rel = 'stylesheet' type = 'text/css' href = './assets/main.css'/>
</head>
<body>
    <div class = 'main_block'>
        <div class = 'background-exp'>
            <header>
                <div class = 'logo'>
                    <img src = './assets/logo.png'/>
                </div>
                <div class = 'profile_block'>
                    <h1><%= data.name %> <%= data.surname %></h1>
                    <a href = '/'><div class = 'logout_'></div></a>
                </div>
            </header>
            <main>
                <table>
                    <tr>
                        <th>Pr√ºfungsdatum</th>
                        <th>Sprache</th>
                        <th>Niveau</th>
                        <th>Punkten</th>
                        <th>Stand</th>
                    </tr>
                    <% statistic.forEach(function(data){ %>
                        <tr>
                            <td class = 'fr'><%= data.prufungsdatum %></td>
                            <td class = 'fr'><%= data.sprache %></td>
                            <td class = 'fr'><%= data.niveau %></td>
                            <td class = 'fr'><%= data.punkten %></td>
                            <td class = 'fr'><%= data.stand %></td>
                        </tr>
                    <% }); %>
                </table>
                <div class = 'documents_block'>
                    <% statistic.forEach(function(object){ %>
                        <div class = 'pdf' >
                            <img class = 'pdf_i' src = './assets/pdf.png'/>
                            <p class = 'info'><%= object.prufungsdatum %></p>
                        </div>
                    <% }); %>
                </div>
            </main>
            <footer>
                <div class = 'about_block'>
                    <p class = 'about'>Powered by NodeJs<br>
                        Created by Andrius Lizunovas<br>
                        Let's do things faster!
                    </p>
                </div>
            </footer>
        </div>
    </div>
</body>
</html>